{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./src",
    "strict": true,
    "declaration": true,
    "strictFunctionTypes": false,
    "sourceMap": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "baseUrl": "./"
  },
  "include": ["./typing-workarounds/*.ts", "./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.json"],
  "exclude": ["node_modules"]
}
